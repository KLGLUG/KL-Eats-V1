    <style>
        .contact-us {
            padding: 20px;
            max-width: 900px;
            margin: auto;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            transition: box-shadow 0.3s;
        }

        .contact-us:hover {
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
        }

        .contact-us h1 {
            font-family: 'Poppins', sans-serif;
            color: #f40808;
            text-align: center;
            margin-bottom: 20px;
            font-size: 2.5em;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .contact-us h2 {
            font-family: 'Poppins', sans-serif;
            color: #f40808;
            margin: 15px 0;
            font-size: 1.8em;
        }

        .contact-info {
            border: 2px solid #f40808;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            background: linear-gradient(145deg, #ffffff, #e6e6e6);
            box-shadow: 4px 4px 12px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            text-align: justify;
        }

        .contact-info:hover {
            transform: translateY(-5px);
            box-shadow: 6px 6px 16px rgba(0, 0, 0, 0.2);
        }

        .contact-info p, .contact-info li {
            line-height: 1.6;
            margin-bottom: 15px;
            color: #000;
            font-size: 1.1em;
        }

        .contact-info ul {
            list-style-type: disc;
            margin-left: 20px;
        }
    </style>
</head>

