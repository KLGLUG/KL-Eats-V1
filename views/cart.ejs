    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <!-- bootstrap  -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <!-- for swiper slider  -->
    <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css">

    <!-- fancy box  -->
    <link rel="stylesheet" href="/stylesheets/jquery.fancybox.min.css">
    <!-- custom css  -->
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        .content-padding {
            padding-top: 120px; /* Adjust this value as needed */
        }
        table,
        th,
        tr,
        td {
            border: 2px solid black;
            padding: 8px 10px;
            border-radius: 20px;
        }

        a {
            color: white;
        }

        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }
    
        /* Optional: to ensure the table takes full width */
        .table-responsive table {
            width: 100%;
        }

        #mycart {
            min-width: 600px; /* Adjust this value as needed */
        }
    
        #mycart th,
        #mycart td {
            min-width: 100px; /* Adjust this value as needed */
        }
    </style>
</head>

<body class="body-fixed">
    <!-- start of header  -->
    <header class="site-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">

                </div>
                <div class="col-lg-10">
                    <div class="main-navigation">
                        <button class="menu-toggle"><span></span><span></span></button>
                        <nav class="header-menu">
                            <ul class="menu food-nav-menu">
                                <li><a href="/homepage">Home</a></li>
                                <li><a href="#about">About</a></li>
                                <li><a href="#team">Our Team</a></li>
                                <li><a href="#testimonials">Testimonials</a></li>
                                <li><a href="#contact">Contact</a></li>
                            </ul>
                        </nav>
                        <div class="header-right">
                            <form action="#" class="header-search-form for-des">
                                <input type="search" class="form-input" placeholder="Search Here...">
                                <button type="submit">
                                    <i class="uil uil-search"></i>
                                </button>
                            </form>
                            <a href="javascript:void(0)" class="header-btn header-cart">
                                <i class="uil uil-shopping-bag"></i>
                                <span class="cart-number" id="cart-number-count">
                                    <%= item_count %>
                                </span>
                            </a>
                            <div class="dropdown">
                                <label><button onclick="myFunction()" class="header-username"
                                        style="color: #ff8243; padding: 4px 8px;"><b><i>
                                                <%= username %>
                                            </i></b></button></label>
                                <div id="myDropdown" class="dropdown-content">
                                    <a href="/myorders">My Orders</a>
                                    <a href="/settings">Settings</a>
                                    <a href="/logout">Sign Out</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header ends  -->

    <div id="viewport" class="content-padding">
        <div id="js-scroll-content">

            <!-- My Cart starts  -->

            <section class="about-sec section" id="cart" style="background-image: url(/images/menu-bg.png);">
                <div class="container">
                    <div class="row">
                        <form action="/checkout" method="post" onsubmit="updateCartData()">
                            <div class="col-lg-12">
                                <div class="sec-title text-center mb-5">
                                    <h2 class="h2-title">My Cart</h2>
                                    <div class="sec-title-shape mb-4">
                                        <img src="/images/title-shape.svg" alt="">
                                    </div>
                                    <% let count=0 %>
                                        <% let total_price=0 %>
                                            <% let total_items=0 %>
                                                <div class="table-responsive">
                                                    <table id="mycart">
                                                        <thead>
                                                            <tr>
                                                                <th style="width: 5%;">S.No.:</th>
                                                                <th style="width: 10%;">Product</th>
                                                                <th style="width: 50%;">Product Name</th>
                                                                <th style="width: 10%;">Price</th>
                                                                <th style="width: 5%;">Quantity</th>
                                                                <th style="width: 20%;">SubTotal</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% if (items && items.length > 0) { %>
                                                                <% items.forEach((item, index) => { %>
                                                                    <tr>
                                                                        <td><%= index + 1 %></td>
                                                                        <td><img src="<%= item.item_img %>" alt="<%= item.item_name %>" style="width: 50px; height: 50px;"></td>
                                                                        <td><%= item.item_name %></td>
                                                                        <td>₹ <span class="item-price"><%= item.item_price %></span></td>
                                                                        <td><input type="number" class="quantity" name="quantity" value="<%= item.quantity %>" min="1" onchange="updateSubtotal(this, <%= item.item_price %>);"></td>
                                                                        <td>₹ <span class="subtotal"><%= item.item_price * item.quantity %></span></td>
                                                                    </tr>
                                                                <% }); %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="6">Your cart is empty</td>
                                                                </tr>
                                                            <% } %>
                                                        </tbody>
                                                        <tfoot>
                                                            <tr>
                                                                <td colspan="4"><strong>Total</strong></td>
                                                                <td id="total_quantity"><%= item_count %></td>
                                                                <td id="total_price">₹ 0</td>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                            </div><br><br>
                            <input type="hidden" id="cartData" name="cartData" value="">
                            <button type="submit" class="sec-btn" style="color: white; background: orange;">Buy Now</button>
                        </form>
                    </div>
                </div>
            </section>
            <!-- My Cart ends  -->


            <!-- footer starts  -->
            <footer class="site-footer" id="contact">
                <div class="top-footer section">
                    <div class="sec-wp">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="footer-info">
                                        <div class="footer-logo">
                                            <a href="index.html">
                                                <img src="/images/file.png" alt="" height="100" width="100">
                                            </a>
                                        </div>
                                        <p>You’ll wonder how you ever lived without us.</p>
                                        <div class="social-icon">
                                            <ul>
                                                <li><a href="#"><i class="uil uil-facebook-f"></i></a></li>
                                                <li><a href="#"><i class="uil uil-instagram"></i></a></li>
                                                <li><a href="#"><i class="uil uil-youtube"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="footer-flex-box">

                                        <div class="footer-menu food-nav-menu">
                                            <h3 class="h3-title">Links</h3>
                                            <ul class="column-2">
                                                <li> <a href="index.html" class="footer-active-menu">Home</a></li>
                                                <li><a href="#about">About</a></li>
                                                <li><a href="#team">Our Team</a></li>
                                                <li><a href="#testimonials">Testimonials</a></li>
                                                <li><a href="#contact">Contact</a></li>

                                            </ul>
                                        </div>
                                        <div class="footer-menu">
                                            <h3 class="h3-title">Company</h3>
                                            <ul>
                                                <li><a href="#">Terms & Conditions</a></li>
                                                <li><a href="#">Privacy Policy</a></li>
                                                <li><a href="#">Cookie Policy</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bottom-footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <div class="copyright-text">
                                    <p>Copyright &copy; 2024 <span class="name">KL Eats </span>All Rights
                                        Reserved.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <button class="scrolltop"><i class="uil uil-angle-up"></i></button>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- My Script -->
    <script>

        function updateSubtotal(quantityInput, price) {
            const quantity = parseInt(quantityInput.value);
            const subtotal = quantity * price;
            const subtotalElement = quantityInput.parentElement.nextElementSibling.querySelector('.subtotal');
            subtotalElement.textContent = subtotal;
            updateTotal();
        }

        function updateTotal() {
            const subtotals = document.querySelectorAll('.subtotal');
            const quantities = document.querySelectorAll('.quantity');
            let totalPrice = 0;
            let totalQuantity = 0;

            subtotals.forEach(subtotal => {
                totalPrice += parseFloat(subtotal.textContent);
            });

            quantities.forEach(quantity => {
                totalQuantity += parseInt(quantity.value);
            });

            document.getElementById('total_price').textContent = '₹ ' + totalPrice.toFixed(2);
            document.getElementById('total_quantity').textContent = totalQuantity;
        }

        function updateCartData() {
            const items = document.querySelectorAll('#mycart tbody tr');
            const cartData = [];

            items.forEach(item => {
                const itemId = item.cells[0].textContent; // Assuming the first cell contains the item ID
                const quantity = parseInt(item.querySelector('.quantity').value);
                const price = parseFloat(item.querySelector('.item-price').textContent);

                cartData.push({
                    item_id: itemId,
                    quantity: quantity,
                    price: price
                });
            });

            document.getElementById('cartData').value = JSON.stringify(cartData);
        }

        // Call updateTotal on page load
        document.addEventListener('DOMContentLoaded', () => {
            updateTotal();
            updateCartData(); // Initialize cart data
        });

    </script>
